<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tfg.parkplatesystem.controller.ControladorAdministrador" spacing="10" alignment="CENTER">
    <children>
        <Label fx:id="nombreUsuarioLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <TableView fx:id="tablaUsuarios">
            <columns>
                <TableColumn fx:id="columnaId" text="ID"/>
                <TableColumn fx:id="columnaNombre" text="Nombre"/>
                <TableColumn fx:id="columnaApellidos" text="Apellidos"/>
                <TableColumn fx:id="columnaEmail" text="Email"/>
                <TableColumn fx:id="columnaRol" text="Rol"/>
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <stylesheets>
        <URL value="@../css/estilos.css"/>
    </stylesheets>
</VBox>
