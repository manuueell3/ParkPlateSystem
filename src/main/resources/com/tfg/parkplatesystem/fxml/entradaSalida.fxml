<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #5A9579FF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.parkplatesystem.controller.ControladorEntradasSalidas" styleClass="vbox">
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Entradas y Salidas" textAlignment="CENTER">
         <font>
            <Font name="Arial" size="12.0" />
         </font></Label>

        <TableView fx:id="entradasSalidasTable" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="idColumn" style="-fx-background-color: #7DDD6B;" text="ID" />
                <TableColumn fx:id="vehiculoColumn" style="-fx-background-color: #7DDD6B;" text="Vehículo" />
                <TableColumn fx:id="fechaEntradaColumn" style="-fx-background-color: #7DDD6B;" text="Fecha Entrada" />
                <TableColumn fx:id="fechaSalidaColumn" style="-fx-background-color: #7DDD6B;" text="Fecha Salida" />
                <TableColumn fx:id="estadoColumn" style="-fx-background-color: #7DDD6B;" text="Estado" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <TextField fx:id="vehiculoTextField" promptText="Vehículo" />
                <TextField fx:id="fechaEntradaTextField" promptText="Fecha Entrada" />
                <TextField fx:id="fechaSalidaTextField" promptText="Fecha Salida" />
                <TextField fx:id="estadoTextField" promptText="Estado" />
                <Button onAction="#handleAddRegistro" text="Añadir Registro" />
                <Button onAction="#handleDeleteRegistro" styleClass="boton-eliminar" text="Eliminar Registro" />
            </children>
        </HBox>

        <Button onAction="#handleBackButton" styleClass="boton-volverMenu" text="Volver al Menú Principal" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <stylesheets>
        <URL value="@../css/estilosGenerales.css" />
    </stylesheets>
</VBox>
