<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #5A9579FF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.parkplatesystem.controller.ControladorEventos" styleClass="vbox">
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Eventos" />

        <TableView fx:id="eventosTable">
            <columns>
                <TableColumn fx:id="idColumn" style="-fx-background-color: #7DDD6B;" text="ID" />
                <TableColumn fx:id="nombreColumn" style="-fx-background-color: #7DDD6B;" text="Nombre" />
                <TableColumn fx:id="descripcionColumn" style="-fx-background-color: #7DDD6B;" text="Descripción" />
                <TableColumn fx:id="fechaColumn" style="-fx-background-color: #7DDD6B;" text="Fecha" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <TextField fx:id="nombreTextField" promptText="Nombre" />
                <TextField fx:id="descripcionTextField" promptText="Descripción" />
                <TextField fx:id="fechaTextField" promptText="Fecha" />
                <Button onAction="#handleAddEvento" text="Añadir Evento" />
                <Button onAction="#handleDeleteEvento" styleClass="boton-eliminar" text="Eliminar Evento" />
            </children>
        </HBox>

        <Button onAction="#handleBackButton" text="Volver al Menú Principal" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <stylesheets>
        <URL value="@../css/estilosGenerales.css" />
    </stylesheets>
</VBox>
