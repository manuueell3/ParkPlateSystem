<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="10" styleClass="vbox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.parkplatesystem.controller.ControladorIncidencias">
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Incidencias" />

        <TableView fx:id="tablaIncidencias" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="columnaIdIncidencia" text="ID Incidencia" />
                <TableColumn fx:id="columnaDescripcion" text="Descripción" />
                <TableColumn fx:id="columnaFechaHora" text="Fecha y Hora" />
                <TableColumn fx:id="columnaEstado" text="Estado" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <TextField fx:id="txtBuscar" promptText="Buscar..." />
                <Button text="Buscar" onAction="#buscar" />
                <Button text="Limpiar Filtros" onAction="#limpiarFiltros" />
            </children>
        </HBox>

        <HBox spacing="10">
            <VBox spacing="5">
                <Label text="Descripción:" />
                <TextArea fx:id="txtDescripcion" />
            </VBox>
            <VBox spacing="5">
                <Label text="Estado:" />
                <TextField fx:id="txtEstado" />
            </VBox>
        </HBox>

        <HBox spacing="10">
            <Button text="Crear" onAction="#crearIncidencia" />
            <Button text="Actualizar" onAction="#actualizarIncidencia" />
            <Button text="Eliminar" onAction="#eliminarIncidencia" />
        </HBox>

        <Button onAction="#handleBackButton" styleClass="boton-volverMenu" text="Volver al Menú Principal" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <stylesheets>
        <URL value="@../css/estilosGenerales.css" />
    </stylesheets>
</VBox>
