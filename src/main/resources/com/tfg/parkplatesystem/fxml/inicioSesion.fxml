<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.parkplatesystem.controller.ControladorAutenticacion" spacing="10" alignment="CENTER">
    <children>
        <Label text="Inicio de Sesión" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Correo electrónico:"/>
        <TextField fx:id="emailTextField" promptText="Introduce tu correo electrónico"/>
        <Label text="Contraseña:"/>
        <PasswordField fx:id="passwordField" promptText="Introduce tu contraseña"/>
        <Button text="Iniciar Sesión" onAction="#handleLoginButton"/>
        <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
