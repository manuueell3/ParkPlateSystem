<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.parkplatesystem.controller.ControladorTarjetas" spacing="10" alignment="CENTER">
    <children>
        <Label text="Gestión de Tarjetas" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <TableView fx:id="tarjetasTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="usuarioColumn" text="Usuario"/>
                <TableColumn fx:id="numeroColumn" text="Número"/>
                <TableColumn fx:id="fechaExpiracionColumn" text="Fecha de Expiración"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <TextField fx:id="usuarioTextField" promptText="Usuario"/>
                <TextField fx:id="numeroTextField" promptText="Número"/>
                <TextField fx:id="fechaExpiracionTextField" promptText="Fecha de Expiración"/>
                <Button text="Añadir Tarjeta" onAction="#handleAddTarjeta"/>
                <Button text="Eliminar Tarjeta" onAction="#handleDeleteTarjeta"/>
            </children>
        </HBox>

        <Button text="Volver al Menú Principal" onAction="#handleBackButton"/>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
