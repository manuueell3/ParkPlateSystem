<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.parkplatesystem.controller.ControladorUsuarios">
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Usuarios" />

        <TableView fx:id="usuariosTable" prefHeight="300" prefWidth="500">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nombreColumn" text="Nombre" />
                <TableColumn fx:id="apellidosColumn" text="Apellidos" />
                <TableColumn fx:id="correoColumn" text="Correo" />
                <TableColumn fx:id="rolColumn" text="Rol" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <TextField fx:id="nombreTextField" promptText="Nombre" />
                <TextField fx:id="apellidosTextField" promptText="Apellidos" />
                <TextField fx:id="correoTextField" promptText="Correo" />
                <TextField fx:id="rolTextField" promptText="Rol" />
                <Button onAction="#handleAddUsuario" text="Añadir Usuario" />
                <Button onAction="#handleDeleteUsuario" styleClass="boton-eliminar" text="Eliminar Usuario" />
            </children>
        </HBox>

        <Button onAction="#handleBackButton" text="Volver al Menú Principal" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <stylesheets>
        <URL value="@../css/estilos.css" />
    </stylesheets>
</VBox>
