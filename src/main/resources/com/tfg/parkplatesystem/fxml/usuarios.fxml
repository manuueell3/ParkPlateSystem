<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tfg.parkplatesystem.controller.ControladorUsuarios" spacing="10" alignment="CENTER">
    <children>
        <Label text="Gestión de Usuarios" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <TableView fx:id="usuariosTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="nombreColumn" text="Nombre"/>
                <TableColumn fx:id="correoColumn" text="Correo"/>
                <TableColumn fx:id="rolColumn" text="Rol"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <TextField fx:id="nombreTextField" promptText="Nombre"/>
                <TextField fx:id="correoTextField" promptText="Correo"/>
                <TextField fx:id="rolTextField" promptText="Rol"/>
                <Button text="Añadir Usuario" onAction="#handleAddUsuario"/>
                <Button text="Eliminar Usuario" onAction="#handleDeleteUsuario"/>
            </children>
        </HBox>

        <Button text="Volver al Menú Principal" onAction="#handleBackButton"/>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
